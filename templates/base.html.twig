<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% for message in app.flashes('message') %}
                <h2>{{message}}</h2>
            {% endfor %}

           <div class="mb-3">
                    <a href="{{ path('app_login') }}" class="btn btn-primary">Přihlásit se</a>
                    <a href="{{ path('app_register') }}" class="btn btn-secondary">Registrace</a>
            </div>
        <div class="row row-cols-1 g-4">
                        {% for article in articles %}
                            <div class="col">
                                <div class="card">
                                    {% if article.image != null %}
                                        <img src="{{ asset('uploads/' ~ article.image) }}" style="width: 25%" class="card-img-top img-fluid" alt="Image of {{ article.title }}">
                                    {% endif %}
                                    <div class="card-body">
                                        <h5 class="card-title">{{ article.title }}</h5>
                                    </div>
                        </div>
                    {% endfor %}
                </div>
        {% endblock %}
    </body>
</html>
